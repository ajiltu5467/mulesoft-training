		<set-variable value="#[attributes.queryParams.billingCity default '']" doc:name="Set Variable" doc:id="32065bd3-47fb-49db-b51e-533948441956" variableName="billingCityVar"/>
		<choice doc:name="Choice" doc:id="853b3320-2fc6-4e8a-bdac-50c90445d72f" >
			<when expression="#[vars.billingCityVar != '']">
				<salesforce:query doc:name="Query" doc:id="8046d3b4-0b94-4c28-8121-73869fe4f64b" config-ref="Salesforce_Config">
					<salesforce:salesforce-query ><![CDATA[select Name, ID, BillingCountry, BillingCity, BillingState, BillingStreet, BillingPostalCode from Account where BillingCity = ':billingCity']]></salesforce:salesforce-query>
					<salesforce:parameters ><![CDATA[#[billlingCity : vars.billingCityVar]]]></salesforce:parameters>
				</salesforce:query>
			</when>
			<otherwise >
				<salesforce:query-all doc:name="Query all" doc:id="3e6d48ca-fa17-4e71-b6f7-df19216bc5a9" config-ref="Salesforce_Config">
			<salesforce:salesforce-query><![CDATA[select Name, ID, BillingCountry, BillingCity, BillingState, BillingStreet, BillingPostalCode from Account]]></salesforce:salesforce-query>
		</salesforce:query-all>
			</otherwise>
		</choice>
